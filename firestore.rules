rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /artifacts/{appId}/users/{userId} {
      // A user can read/write their own document.
      // An admin/educator can read/write any user document.
      allow read, write: if request.auth != null && (request.auth.uid == userId || request.auth.token.role in ['Admin', 'Educator']);
      // An admin/educator can list all users.
      allow list: if request.auth != null && request.auth.token.role in ['Admin', 'Educator'];

      match /testHistory/{testId} {
        // A user can read their own history. An admin/educator can read any history.
        allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.role in ['Admin', 'Educator']);
        // A user can only create their own test history.
        allow create: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /practice_sessions/{sessionId} {
      // Admins/Creators/Educators can read all session data for analytics.
      allow read: if request.auth != null && request.auth.token.role in ['Admin', 'Creator', 'Educator'];
    }

    // Rules for all collections under the 'data' directory
    match /artifacts/{appId}/public/data/{collection}/{docId} {
      allow read: if collection == 'appSettings' || request.auth != null;
      allow write: if request.auth != null && (
        (collection == 'appSettings' && request.auth.token.role == 'Admin') ||
        (collection != 'appSettings' && request.auth.token.role in ['Admin', 'Creator', 'Educator'])
      );
    }
  }
}